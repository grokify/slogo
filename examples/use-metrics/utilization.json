[
  {
    "apiVersion": "openslo/v1",
    "kind": "SLO",
    "metadata": {
      "name": "cpu-utilization",
      "displayName": "CPU Utilization",
      "labels": {
        "audience": [
          "sre"
        ],
        "category": [
          "resource"
        ],
        "framework": [
          "use"
        ],
        "layer": [
          "infrastructure"
        ],
        "metric-type": [
          "utilization"
        ],
        "resource-type": [
          "cpu"
        ],
        "scope": [
          "internal"
        ],
        "severity": [
          "high"
        ],
        "tier": [
          "p1"
        ]
      }
    },
    "spec": {
      "description": "Monitor CPU utilization to ensure resources are not over-utilized",
      "service": "backend-service",
      "indicator": {
        "metadata": {
          "name": "cpu-usage",
          "displayName": "CPU usage percentage"
        },
        "spec": {
          "thresholdMetric": {
            "metricSource": {
              "type": "Prometheus",
              "spec": {
                "query": "avg(rate(node_cpu_seconds_total{mode!=\"idle\"}[5m])) * 100"
              }
            }
          }
        }
      },
      "budgetingMethod": "Occurrences",
      "timeWindow": [
        {
          "duration": "1w",
          "isRolling": true
        }
      ],
      "objectives": [
        {
          "displayName": "Healthy CPU utilization",
          "op": "lt",
          "value": 80,
          "target": 0.99
        }
      ]
    }
  },
  {
    "apiVersion": "openslo/v1",
    "kind": "SLO",
    "metadata": {
      "name": "memory-utilization",
      "displayName": "Memory Utilization",
      "labels": {
        "audience": [
          "sre"
        ],
        "category": [
          "resource"
        ],
        "framework": [
          "use"
        ],
        "layer": [
          "infrastructure"
        ],
        "metric-type": [
          "utilization"
        ],
        "resource-type": [
          "memory"
        ],
        "scope": [
          "internal"
        ],
        "severity": [
          "high"
        ],
        "tier": [
          "p0"
        ]
      }
    },
    "spec": {
      "description": "Monitor memory utilization to prevent out-of-memory conditions",
      "service": "backend-service",
      "indicator": {
        "metadata": {
          "name": "memory-usage",
          "displayName": "Memory usage percentage"
        },
        "spec": {
          "thresholdMetric": {
            "metricSource": {
              "type": "Prometheus",
              "spec": {
                "query": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100"
              }
            }
          }
        }
      },
      "budgetingMethod": "Occurrences",
      "timeWindow": [
        {
          "duration": "1w",
          "isRolling": true
        }
      ],
      "objectives": [
        {
          "displayName": "Healthy memory utilization",
          "op": "lt",
          "value": 85,
          "target": 0.99
        }
      ]
    }
  },
  {
    "apiVersion": "openslo/v1",
    "kind": "SLO",
    "metadata": {
      "name": "disk-utilization",
      "displayName": "Disk Utilization",
      "labels": {
        "audience": [
          "sre"
        ],
        "category": [
          "resource"
        ],
        "framework": [
          "use"
        ],
        "layer": [
          "infrastructure"
        ],
        "metric-type": [
          "utilization"
        ],
        "resource-type": [
          "disk"
        ],
        "scope": [
          "internal"
        ],
        "severity": [
          "medium"
        ],
        "tier": [
          "p1"
        ]
      }
    },
    "spec": {
      "description": "Monitor disk space utilization to prevent storage exhaustion",
      "service": "backend-service",
      "indicator": {
        "metadata": {
          "name": "disk-usage",
          "displayName": "Disk usage percentage"
        },
        "spec": {
          "thresholdMetric": {
            "metricSource": {
              "type": "Prometheus",
              "spec": {
                "query": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100"
              }
            }
          }
        }
      },
      "budgetingMethod": "Occurrences",
      "timeWindow": [
        {
          "duration": "2w",
          "isRolling": true
        }
      ],
      "objectives": [
        {
          "displayName": "Healthy disk utilization",
          "op": "lt",
          "value": 75,
          "target": 0.99
        }
      ]
    }
  }
]
