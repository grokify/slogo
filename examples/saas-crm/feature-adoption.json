[
  {
    "apiVersion": "openslo/v1",
    "kind": "SLO",
    "metadata": {
      "name": "contact-management-usage",
      "displayName": "Contact Management Feature Usage",
      "labels": {
        "audience": [
          "product"
        ],
        "category": [
          "engagement"
        ],
        "domain": [
          "crm"
        ],
        "framework": [
          "custom"
        ],
        "layer": [
          "business"
        ],
        "metric-type": [
          "adoption"
        ],
        "scope": [
          "business-outcome"
        ],
        "severity": [
          "medium"
        ],
        "tier": [
          "p2"
        ]
      }
    },
    "spec": {
      "description": "Track percentage of active users who regularly use contact management features",
      "service": "saas-crm-platform",
      "indicator": {
        "metadata": {
          "name": "contact-feature-adoption",
          "displayName": "Weekly contact management adoption rate"
        },
        "spec": {
          "ratioMetric": {
            "counter": false,
            "good": {
              "metricSource": {
                "type": "Prometheus",
                "spec": {
                  "query": "count(sum by(user_id) (rate(feature_usage_total{feature=\"contacts\"}[7d])) \u003e 0)"
                }
              }
            },
            "total": {
              "metricSource": {
                "type": "Prometheus",
                "spec": {
                  "query": "count(count_over_time(user_activity_total[7d]) \u003e 0)"
                }
              }
            }
          }
        }
      },
      "budgetingMethod": "Timeslices",
      "timeWindow": [
        {
          "duration": "1M",
          "isRolling": true
        }
      ],
      "objectives": [
        {
          "displayName": "Strong contact feature adoption",
          "target": 0.8,
          "timeSliceTarget": 0.85,
          "timeSliceWindow": "1d"
        }
      ]
    }
  },
