[
  {
    "apiVersion": "openslo/v1",
    "kind": "SLO",
    "metadata": {
      "name": "daily-active-users",
      "displayName": "Daily Active Users (DAU)",
      "labels": {
        "audience": [
          "product"
        ],
        "category": [
          "engagement"
        ],
        "domain": [
          "crm"
        ],
        "framework": [
          "custom"
        ],
        "journey-stage": [
          "engagement"
        ],
        "layer": [
          "business"
        ],
        "scope": [
          "business-outcome"
        ],
        "severity": [
          "high"
        ],
        "tier": [
          "p0"
        ]
      }
    },
    "spec": {
      "description": "Track daily active users to monitor platform engagement",
      "service": "saas-crm-platform",
      "indicator": {
        "metadata": {
          "name": "dau-count",
          "displayName": "Daily active user count"
        },
        "spec": {
          "thresholdMetric": {
            "metricSource": {
              "type": "Prometheus",
              "spec": {
                "query": "count(count_over_time(user_activity_total[24h]) \u003e 0)"
              }
            }
          }
        }
      },
      "budgetingMethod": "Occurrences",
      "timeWindow": [
        {
          "duration": "1M",
          "isRolling": true
        }
      ],
      "objectives": [
        {
          "displayName": "Healthy daily engagement",
          "op": "gte",
          "value": 50000,
          "target": 0.9
        }
      ]
    }
  },
  {
    "apiVersion": "openslo/v1",
