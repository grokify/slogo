  {
    "apiVersion": "openslo/v1",
    "kind": "SLO",
    "metadata": {
      "name": "power-user-ratio",
      "displayName": "Power User Ratio",
      "labels": {
        "audience": [
          "product"
        ],
        "category": [
          "engagement"
        ],
        "domain": [
          "crm"
        ],
        "framework": [
          "custom"
        ],
        "journey-stage": [
          "engagement"
        ],
        "layer": [
          "business"
        ],
        "metric-type": [
          "stickiness"
        ],
        "scope": [
          "business-outcome"
        ],
        "severity": [
          "high"
        ],
        "tier": [
          "p1"
        ]
      }
    },
    "spec": {
      "description": "Track percentage of users who are highly engaged (active 20+ days per month)",
      "service": "saas-crm-platform",
      "indicator": {
        "metadata": {
          "name": "power-user-percentage",
          "displayName": "Percentage of power users among MAU"
        },
        "spec": {
          "ratioMetric": {
            "counter": false,
            "good": {
              "metricSource": {
                "type": "BigQuery",
                "spec": {
                  "query": "SELECT COUNT(DISTINCT user_id) FROM user_activity WHERE days_active_last_30d \u003e= 20"
                }
              }
            },
            "total": {
              "metricSource": {
                "type": "BigQuery",
                "spec": {
                  "query": "SELECT COUNT(DISTINCT user_id) FROM user_activity WHERE days_active_last_30d \u003e 0"
                }
              }
            }
          }
        }
      },
      "budgetingMethod": "Timeslices",
      "timeWindow": [
        {
          "duration": "1M",
          "isRolling": true
        }
      ],
      "objectives": [
        {
          "displayName": "Healthy power user base",
          "target": 0.25,
          "timeSliceTarget": 0.85,
          "timeSliceWindow": "1d"
        }
      ]
    }
  }
]
