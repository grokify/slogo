  {
    "apiVersion": "openslo/v1",
    "kind": "SLO",
    "metadata": {
      "name": "emails-sent-per-user",
      "displayName": "Emails Sent Per Active User",
      "labels": {
        "audience": [
          "product"
        ],
        "category": [
          "engagement"
        ],
        "domain": [
          "crm"
        ],
        "framework": [
          "custom"
        ],
        "journey-stage": [
          "engagement"
        ],
        "layer": [
          "business"
        ],
        "scope": [
          "business-outcome"
        ],
        "severity": [
          "high"
        ],
        "tier": [
          "p1"
        ]
      }
    },
    "spec": {
      "description": "Track average number of emails sent per active user to measure engagement",
      "service": "saas-crm-platform",
      "indicator": {
        "metadata": {
          "name": "email-activity-per-user",
          "displayName": "Average emails sent per DAU"
        },
        "spec": {
          "thresholdMetric": {
            "metricSource": {
              "type": "Prometheus",
              "spec": {
                "query": "sum(rate(emails_sent_total[24h])) / count(count_over_time(user_activity_total[24h]) \u003e 0)"
              }
            }
          }
        }
      },
      "budgetingMethod": "Occurrences",
      "timeWindow": [
        {
          "duration": "1w",
          "isRolling": true
        }
      ],
      "objectives": [
        {
          "displayName": "Active email engagement",
          "op": "gte",
          "value": 10,
          "target": 0.8
        }
      ]
    }
  }
]
